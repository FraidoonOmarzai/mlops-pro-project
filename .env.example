# Docker Configuration
# Copy this file to .env and update with your values

# Docker Hub Username (required for pushing images)
DOCKER_USERNAME=your_dockerhub_username

# Version/Tag for images
VERSION=latest

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_BACKEND_STORE_URI=sqlite:///mlflow/mlflow.db
MLFLOW_DEFAULT_ARTIFACT_ROOT=/mlflow/artifacts

# Model Paths
MODEL_PATH=artifacts/models/xgboost.pkl
PREPROCESSOR_PATH=artifacts/preprocessors/preprocessor.pkl
LABEL_ENCODER_PATH=artifacts/preprocessors/preprocessor_label_encoder.pkl

# Logging
LOG_LEVEL=INFO

# Python
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1